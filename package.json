{
	"name": "tiny-mixin",
	"version": "1.1.1",
	"description": "A lightweight TypeScript-first class mixin utility",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"scripts": {
		"build": "tsup",
		"format:write": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"keywords": [
		"class",
		"mixin",
		"typescript",
		"javascript",
		"utility",
		"composition"
	],
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/louiszn/tiny-mixin"
	},
	"bugs": {
		"url": "https://github.com/louiszn/tiny-mixin/issues"
	},
	"homepage": "https://github.com/louiszn/tiny-mixin#readme",
	"author": "Louiszn",
	"license": "MIT",
	"packageManager": "pnpm@10.28.2",
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@types/node": "^25.2.3",
		"prettier": "^3.8.1",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
